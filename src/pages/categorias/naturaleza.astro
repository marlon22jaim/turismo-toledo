---
import Layout from '../../layouts/Layout.astro';
import PlaceCard from '../../components/PlaceCard.astro';

const places = [
  {
    id: 'parque-nacional-tama',
    title: 'Parque Nacional Natural Tamá',
    image: '/images/places/tama.jpg',
    description: 'Reserva natural binacional con una extraordinaria biodiversidad',
    tags: ['Senderismo', 'Avistamiento de aves', 'Camping'],
  },
  {
    id: 'cascada-honda',
    title: 'Cascada Honda',
    image: '/images/places/cascada-honda.jpg',
    description: 'Impresionante caída de agua rodeada de exuberante vegetación',
    tags: ['Cascadas', 'Fotografía', 'Natación'],
  }
];
---

<Layout title="Naturaleza - Toledo Turismo">
  <main class="pt-20">
    <section class="relative py-16 px-4">
      <div class="max-w-6xl mx-auto">
        <h1 class="text-4xl font-bold text-center mb-4">Naturaleza en Toledo</h1>
        <p class="text-center text-gray-600 dark:text-gray-300 mb-12 max-w-2xl mx-auto">
          Descubre los tesoros naturales que Toledo tiene para ofrecer, desde parques nacionales hasta cascadas impresionantes.
        </p>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {places.map(place => (
            <PlaceCard {...place} />
          ))}
        </div>
      </div>
    </section>
  </main>
</Layout>