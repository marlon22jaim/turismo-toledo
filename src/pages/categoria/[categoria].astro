const categoryPlaces = places[categoria];
---

<Layout title={`${categoryNames[categoria]} en Toledo - Turismo Mágico`}>
  <main class="bg-gray-100 min-h-screen">
    <div class="container mx-auto px-4 py-12">
      <h1 class="text-4xl font-bold text-center mb-12">
        {categoryNames[categoria]} en Toledo
      </h1>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          categoryPlaces.map((place) => (
            <div class="bg-white rounded-lg overflow-hidden shadow-lg">
              <Image
                src={place.image}
                alt={place.name}
                width={500}
                height={300}
                class="w-full h-48 object-cover"
              />
              <div class="p-6">
                <h2 class="text-2xl font-semibold mb-2">{place.name}</h2>
                <p class="text-gray-600 mb-4">{place.description}</p>
                <h3 class="font-semibold mb-2">Actividades:</h3>
                <ul class="list-disc list-inside mb-4">
                  {place.activities.map((activity) => (
                    <li>{activity}</li>
                  ))}
                </ul>
                <p class="mb-4">
                  <strong>Contacto:</strong> {place.contact}
                </p>
                <p class="mb-4">
                  <strong>Whatsaap:</strong>
                  <a href={place.whatsaap} target="_blank">
                    {place.whatsaap}
                  </a>
                </p>

                <h3 class="font-semibold mb-2">Ubicación:</h3>
                <div class="aspect-w-16 aspect-h-9 mb-4">
                  <iframe
                    src={place.location}
                    width="100%"
                    height="200"
                    style="border:0;"
                    allowfullscreen=""
                    loading="lazy"
                  />
                </div>
              </div>
            </div>
          ))
        }
      </div>
      <div class="text-center mt-8">
        <a
          href="/"
          class="inline-block bg-blue-600 text-white px-6 py-2 rounded-full hover:bg-blue-700 transition duration-300"
          >Volver a Inicio</a
        >
      </div>
    </div>
  </main>
</Layout>
