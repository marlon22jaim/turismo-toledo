---
import Layout from "../../layouts/Layout.astro";
import { Image } from "astro:assets";

export function getStaticPaths() {
  return [
    { params: { categoria: "alojamiento" } },
    { params: { categoria: "piscinas" } },
    { params: { categoria: "turisticos" } },
    { params: { categoria: "restaurantes" } },
    { params: { categoria: "comidas_rapidas" } },
    { params: { categoria: "droguerias" } },
    { params: { categoria: "cafe" } },
  ];
}

const { categoria } = Astro.params;

interface Place {
  id: string;
  name: string;
  description: string;
  image: string;
}

const places: Record<string, Place[]> = {
  alojamiento: [
    {
      id: "hotel-la_nona",
      name: "Hotel LA NONA",
      description: "Un cómodo hotel en el corazón de Toledo.",
      image: "/images/alojamiento/hotel_la_nona/hotel_la_nona_principal.JPG",
      
    },
    // Añade más lugares aquí
  ],
  piscinas: [
    {
      id: "piscina-ejemplo",
      name: "Piscina Ejemplo",
      description: "Refrescante piscina con hermosas vistas.",
      image: "/images/piscinas/piscina-ejemplo.jpg",
    },
    // Añade más lugares aquí
  ],
  // Añade más categorías aquí
  turisticos: [
    {
      id: "turistico-ejemplo",
      name: "Turistico Ejemplo",
      description: "Un cómodo hotel en el corazón de Toledo.",
      image: "/images/turistico/turistico-ejemplo.jpg",
    },
    // Añade más lugares aquí
  ],
};

const categoryNames: Record<string, string> = {
  alojamiento: "Alojamiento",
  piscinas: "Piscinas",
  turisticos: "Sitios Turísticos",
  restaurantes: "Restaurantes",
  comidas_rapidas: "Comidas Rápidas",
  droguerias: "Droguerías",
  cafe: "Café",
};

const categoryPlaces = places[categoria];
---

<Layout title={`${categoryNames[categoria]} en Toledo - Turismo Mágico`}>
  <main class="bg-gray-100 min-h-screen">
    <div class="container mx-auto px-4 py-12">
      <h1 class="text-4xl font-bold text-center mb-12">
        {categoryNames[categoria]} en Toledo
      </h1>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          categoryPlaces.map((place) => (
            <a href={`/lugar/${categoria}/${place.id}`} class="block">
              <div class="bg-white rounded-lg overflow-hidden shadow-lg transform hover:scale-105 transition duration-300">
                <Image
                  src={place.image}
                  alt={place.name}
                  width={500}
                  height={300}
                  class="w-full h-48 object-cover"
                />
                <div class="p-6">
                  <h2 class="text-2xl font-semibold mb-2">{place.name}</h2>
                  <p class="text-gray-600">{place.description}</p>
                </div>
              </div>
            </a>
          ))
        }
      </div>
      <div class="text-center mt-8">
        <a
          href="/"
          class="inline-block bg-blue-600 text-white px-6 py-2 rounded-full hover:bg-blue-700 transition duration-300"
        >
          Volver a Inicio
        </a>
      </div>
    </div>
  </main>
</Layout>
