<Layout title="Contacto - Toledo Turismo">
  <main class="pt-20">
    <!-- Hero Section -->
    <section class="relative h-[40vh]">
      <img 
        src="/images/contactenos_hero.jpg" 
        alt="Contacto Toledo Turismo"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-black/50"></div>
      <div class="absolute inset-0 flex items-center justify-center text-white">
        <div class="text-center">
          <h1 class="text-5xl font-bold mb-4">Contáctanos</h1>
          <p class="text-xl max-w-2xl mx-auto">
            Estamos aquí para ayudarte a planear tu visita a Toledo
          </p>
        </div>
      </div>
    </section>

    <div class="max-w-6xl mx-auto px-4 py-16">
      <!-- Información de Contacto Principal -->
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 mb-16">
        {contactInfo.map(item => (
          <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg h-full">
            <div class="flex flex-col h-full">
              <div class="flex items-start space-x-4 mb-4">
                <div class="bg-primary-100 dark:bg-primary-900 p-3 rounded-lg flex-shrink-0">
                  <span class="material-icons text-primary-600 dark:text-primary-400">
                    {item.icon}
                  </span>
                </div>
                <div class="min-w-0">
                  <h3 class="font-bold mb-2 text-lg">{item.title}</h3>
                </div>
              </div>
              <div class="space-y-2">
                {item.details.map(detail => (
                  <p class="text-gray-600 dark:text-gray-300 text-sm break-words">{detail}</p>
                ))}
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- WhatsApp y Redes Sociales -->
      <div class="bg-primary-50 dark:bg-gray-800 rounded-lg p-8 mb-16">
        <h2 class="text-3xl font-bold text-center mb-8">Contacto Directo</h2>
