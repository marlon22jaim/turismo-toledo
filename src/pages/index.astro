---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';

interface Category {
  id: string;
  name: string;
  image: string;
  description: string;
}

const categories: Category[] = [
  {
    id: "naturaleza",
    name: "Naturaleza",
    image: "https://images.unsplash.com/photo-1565036558162-e551c82632bb?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mnx8Y29sb21iaWElMjBuYXR1cmV8ZW58MHx8MHx8fDA%3D",
    description: "Explora la belleza natural de Toledo"
  },
  {
    id: "cultura",
    name: "Cultura",
    image: "https://images.unsplash.com/photo-1543039625-14cbd3802e7d?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8M3x8Y29sb21iaWElMjBjaHVyY2h8ZW58MHx8MHx8fDA%3D",
    description: "Descubre la rica historia y tradiciones de Toledo"
  },
  {
    id: "gastronomia",
    name: "Gastronomía",
    image: "https://images.unsplash.com/photo-1504674900247-0877df9cc836?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mnx8Y29sb21iaWFuJTIwZm9vZHxlbnwwfHwwfHx8MA%3D%3D",
    description: "Saborea la auténtica cocina de Toledo"
  }
];

---

<Layout title="Descubre Toledo, Norte de Santander - Turismo Mágico">
  <main>
    <!-- Hero Section -->
    <section class="relative h-screen flex items-center justify-center overflow-hidden">
      <div class="absolute inset-0 z-0">
        <Image 
          src="/images/Imagen principal toledo.jpg" 
          alt="Toledo, Norte de Santander" 
          width={1920} 
          height={1080} 
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-black opacity-50"></div>
      </div>
      <div class="relative z-10 text-center text-white">
        <h1 class="text-5xl md:text-7xl font-bold mb-4 animate-fade-in">Descubre Toledo</h1>
        <p class="text-xl md:text-2xl mb-8 animate-fade-in-delay">Un tesoro escondido en Norte de Santander, Colombia</p>
        <a href="#categorias" class="bg-white text-blue-600 px-8 py-3 rounded-full text-lg font-semibold hover:bg-blue-100 transition duration-300 animate-fade-in-delay-2">Explorar Toledo</a>
      </div>
    </section>

    <!-- Categories Section -->
    <section id="categorias" class="py-20 bg-gray-100">
      <div class="container mx-auto px-4">
        <h2 class="text-4xl font-bold text-center mb-12">Descubre Toledo por Categorías</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {categories.map((category) => (
            <a href={`/categoria/${category.id}`} class="block">
              <div class="bg-white rounded-lg overflow-hidden shadow-lg transform hover:scale-105 transition duration-300">
                <Image src={category.image} alt={category.name} width={500} height={300} class="w-full h-48 object-cover" />
                <div class="p-6">
                  <h3 class="text-2xl font-semibold mb-2">{category.name}</h3>
                  <p class="text-gray-600">{category.description}</p>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Why Visit Toledo -->
    <section class="py-20 bg-gradient-to-r from-blue-500 to-purple-600 text-white">
      <div class="container mx-auto px-4">
        <h2 class="text-4xl font-bold text-center mb-12">¿Por qué visitar Toledo?</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <div class="text-center">
            <i class="fas fa-mountain text-5xl mb-4"></i>
            <h3 class="text-2xl font-semibold mb-2">Naturaleza Impresionante</h3>
            <p>Explora paisajes montañosos y biodiversidad única.</p>
          </div>
          <div class="text-center">
            <i class="fas fa-landmark text-5xl mb-4"></i>
            <h3 class="text-2xl font-semibold mb-2">Rica Historia</h3>
            <p>Descubre la herencia colonial y cultural de la región.</p>
          </div>
          <div class="text-center">
            <i class="fas fa-utensils text-5xl mb-4"></i>
            <h3 class="text-2xl font-semibold mb-2">Gastronomía Auténtica</h3>
            <p>Degusta sabores locales y platos tradicionales.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Image Gallery -->
    <section class="py-20">
      <div class="container mx-auto px-4">
        <h2 class="text-4xl font-bold text-center mb-12">Galería de Imágenes</h2>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
          {[1, 2, 3, 4, 5, 6, 7, 8].map((num) => (
            <div class="relative overflow-hidden rounded-lg aspect-square">
              <Image 
                src={`https://source.unsplash.com/random/800x800?colombia,toledo&sig=${num}`} 
                alt={`Toledo imagen ${num}`} 
                width={800} 
                height={800} 
                class="w-full h-full object-cover transform hover:scale-110 transition duration-300"
              />
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Testimonials -->
    <section class="py-20 bg-gray-100">
      <div class="container mx-auto px-4">
        <h2 class="text-4xl font-bold text-center mb-12">Lo que dicen nuestros visitantes</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <div class="bg-white p-6 rounded-lg shadow-md">
            <p class="text-gray-600 mb-4">"Toledo es un paraíso escondido. La naturaleza es impresionante y la gente es muy amable."</p>
            <p class="font-semibold">- Carlos R.</p>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-md">
            <p class="text-gray-600 mb-4">"La comida local es deliciosa. No te puedes perder los platos típicos de la región."</p>
            <p class="font-semibold">- Ana M.</p>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-md">
            <p class="text-gray-600 mb-4">"El Parque Nacional Tamá es impresionante. Perfecto para los amantes de la naturaleza."</p>
            <p class="font-semibold">- David L.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="py-20 bg-blue-600 text-white">
      <div class="container mx-auto px-4">
        <h2 class="text-4xl font-bold text-center mb-8">Contáctanos</h2>
        <p class="text-center mb-8">¿Listo para explorar Toledo? Estamos aquí para ayudarte a planificar tu visita.</p>
        <div class="max-w-md mx-auto">
          <form class="space-y-4">
            <input type="text" placeholder="Nombre" class="w-full px-4 py-2 rounded-md text-gray-800" required>
            <input type="email" placeholder="Email" class="w-full px-4 py-2 rounded-md text-gray-800" required>
            <textarea placeholder="Mensaje" rows="4" class="w-full px-4 py-2 rounded-md text-gray-800" required></textarea>
            <button type="submit" class="w-full bg-white text-blue-600 font-semibold py-2 rounded-md hover:bg-blue-100 transition duration-300">Enviar Mensaje</button>
          </form>
        </div>
      </div>
    </section>

    <!-- Google Map -->
    <section class="py-20">
      <div class="container mx-auto px-4">
        <h2 class="text-4xl font-bold text-center mb-12">Ubicación de Toledo, Norte de Santander</h2>
        <div class="aspect-w-16 aspect-h-9">
          <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d31731.804783423235!2d-72.50118368016653!3d7.310972074070312!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8e664598e8463f3f%3A0x618a7bfe2c1d3506!2sToledo%2C%20Norte%20de%20Santander!5e0!3m2!1ses!2sco!4v1637000000000!5m2!1ses!2sco" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .animate-fade-in {
    animation: fadeIn 1s ease-out;
  }
  .animate-fade-in-delay {
    animation: fadeIn 1s ease-out 0.5s both;
  }
  .animate-fade-in-delay-2 {
    animation: fadeIn 1s ease-out 1s both;
  }
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>