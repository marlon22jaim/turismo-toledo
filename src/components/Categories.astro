---
const categories = [
  {
    id: 'naturaleza',
    title: 'Naturaleza',
    image: '/images/categories/naturaleza.jpg',
    description: 'Explora nuestros parques naturales y paisajes',
  },
  {
    id: 'cultura',
    title: 'Cultura',
    image: '/images/categories/cultura.jpg',
    description: 'Conoce nuestra rica herencia cultural',
  },
  {
    id: 'gastronomia',
    title: 'Gastronom√≠a',
    image: '/images/categories/gastronomia.jpg',
    description: 'Saborea nuestra deliciosa cocina local',
  },
  {
    id: 'aventura',
    title: 'Aventura',
    image: '/images/categories/aventura.jpg',
    description: 'Vive experiencias emocionantes',
  },
];
---

<section id="explorar" class="py-16 px-4">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-3xl font-bold text-center mb-12">Explora Toledo</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {categories.map(category => (
        <a href={`/categorias/${category.id}`} class="group">
          <div class="relative overflow-hidden rounded-lg shadow-lg">
            <img 
              src={category.image} 
              alt={category.title}
              class="w-full h-64 object-cover transform group-hover:scale-110 transition-transform duration-300"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent">
              <div class="absolute bottom-0 p-6">
                <h3 class="text-2xl font-bold text-white mb-2">{category.title}</h3>
                <p class="text-white/90">{category.description}</p>
              </div>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>