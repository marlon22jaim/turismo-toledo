---
interface Props {
  id: string;
  title: string;
  image: string;
  description: string;
  tags: string[];
}

const { id, title, image, description, tags } = Astro.props;
---

<a href={`/lugares/${id}`} class="group">
  <article class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-lg transition-transform duration-300 group-hover:-translate-y-2">
    <div class="relative h-64 overflow-hidden">
      <img 
        src={image} 
        alt={title}
        class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-300"
      />
      <div class="absolute bottom-0 inset-x-0 bg-gradient-to-t from-black/60 to-transparent p-4">
        <h2 class="text-2xl font-bold text-white">{title}</h2>
      </div>
    </div>
    <div class="p-6">
      <p class="text-gray-600 dark:text-gray-300 mb-4">{description}</p>
      <div class="flex flex-wrap gap-2">
        {tags.map(tag => (
          <span class="px-3 py-1 bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-100 rounded-full text-sm">
            {tag}
          </span>
        ))}
      </div>
    </div>
  </article>
</a>