---
interface Video {
  url: string;
  alt: string;
}

interface Props {
  video: Video;
}

const { video } = Astro.props;
---

<section class="py-12">
  <div 
    class="relative aspect-video overflow-hidden rounded-lg cursor-pointer group"
    onclick={`window.openVideo('${video.url}')`}
  >
    <video 
      src={video.url}
      alt={video.alt}
      class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-300"
      controls
    />
    <div class="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
      <span class="text-white text-sm">{video.alt}</span>
    </div>
  </div>
</section>

<!-- Modal para video a pantalla completa -->
<div id="videoModal" class="fixed inset-0 bg-black/80 hidden items-center justify-center z-50">
  <video 
    id="modalVideo"
    class="max-w-full max-h-full rounded-lg"
    controls
    autoplay
  >
    Tu navegador no soporta la etiqueta de video.
  </video>
  <button 
    id="closeVideoModal" 
    class="absolute top-4 right-4 text-white text-2xl font-bold bg-black/50 p-2 rounded-full"
  >
    ✕
  </button>
</div>

<script>
  // Registrar la función para abrir el video en pantalla completa
  window.openVideo = (url) => {
    const modal = document.getElementById('videoModal');
    const modalVideo = document.getElementById('modalVideo');
    modalVideo.src = url;
    modal.classList.remove('hidden');
    modal.classList.add('flex');
    modalVideo.play(); // Inicia la reproducción al abrir el modal
  };

  window.closeModal = () => {
    const modal = document.getElementById('videoModal');
    const modalVideo = document.getElementById('modalVideo');
    modal.classList.add('hidden');
    modal.classList.remove('flex');
    modalVideo.pause(); // Pausa el video cuando se cierra el modal
    modalVideo.currentTime = 0; // Opcional: reinicia el video al principio
  };

  // Vincular los eventos para cerrar el modal
  document.getElementById('closeVideoModal').addEventListener('click', window.closeModal);
  document.getElementById('videoModal').addEventListener('click', (e) => {
    if (e.target.id === 'videoModal') {
      window.closeModal();
    }
  });
</script>