---
interface Props {
  title: string;
  description: string;
  link: string;  
}

const { title, description, link } = Astro.props;

---

<section class="py-20">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-center mb-12">{title}</h2>
    <div class="aspect-w-16 aspect-h-9">
      <iframe
        src={link} 
        width="100%"
        height="450"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"></iframe>
    </div>
    <p class="text-center mt-4 text-gray-600 dark:text-gray-300">{description}</p>
  </div>
</section>
